#!/bin/sh

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge status (ðŸ”Œ for plugged up, ðŸ”‹ for discharging on battery, etc.).

TIME=$(acpi | grep Battery\ 0 | awk {'print $5'})
STATUS=$(acpi | grep Battery\ 0 | awk -F ',' {'print $1'} | awk {'print $3'})
if [ "$STATUS" = "Charging" ]; then
MSG="- å……ç”µä¸­ï¼Œ$TIME å……æ»¡"
fi
case $BUTTON in
	1) dunstify "ðŸ”‹ ç”µæ± æ¨¡å—" "ðŸ”‹: æ”¾ç”µ
ðŸŒ: åœæ»žç”µè·
ðŸ”Œ: æ­£åœ¨å……ç”µæˆ–è¿žæŽ¥å……ç”µå™¨æœªå……ç”µ
ðŸˆµ: å·²å……æ»¡
ðŸ”¥: ç”µæ± ç”µé‡ä½Ž!
- æ»šåŠ¨ä»¥æ›´æ”¹è°ƒæ•´å±å¹•äº®åº¦ã€‚
$MSG" ;;
	4) xbacklight -inc 10 ;;
	5) xbacklight -dec 10 ;;
	3) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Loop through all attached batteries and format the info
for battery in /sys/class/power_supply/BAT?*; do
	# If non-first battery, print a space separator.
	[ -n "${capacity+x}" ] && printf " "
	# Sets up the status and capacity
	case "$(cat "$battery/status" 2>&1)" in
		"Full") status="ðŸˆµ" ;;
		"Discharging") status="ðŸ”‹" ;;
		"Charging") status="ðŸ”Œ" ;;
		"Not charging") status="ðŸ”Œ" ;;
		"Unknown") status="ðŸŒ" ;;
		*) exit 1 ;;
	esac
	capacity="$(cat "$battery/capacity" 2>&1)"
	# Will make a warn variable if discharging and low
	[ "$status" = "ðŸ”‹" ] && [ "$capacity" -le 25 ] && warn="ðŸ”¥" && cvlc --play-and-exit ./low.power.mp3
	# Prints the info
	printf "%s%s%d%%" "$status" "$warn" "$capacity"; unset warn
done && printf "\\n"
