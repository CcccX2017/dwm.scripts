#!/bin/sh

# Module showing network traffic. Shows how much data has been received (RX) or
# transmitted (TX) since the previous time this script ran. So if run every
# second, gives network traffic per second.
# æ˜¾ç¤ºç½‘ç»œæµé‡çš„æ¨¡å—ã€‚æ˜¾ç¤ºå·²æ¥æ”¶åˆ°å¤šå°‘æ•°æ® (RX) æˆ–
# è‡ªä¸Šæ¬¡è¿è¡Œæ­¤è„šæœ¬ä»¥æ¥å·²ä¼ è¾“ (TX)ã€‚ å› æ­¤ï¼Œå¦‚æœæ¯ç§’è¿è¡Œä¸€æ¬¡ï¼Œåˆ™æ¯ç§’æä¾›ç½‘ç»œæµé‡ã€‚

 case $BUTTON in
 	#1) setsid -f "$TERMINAL" -e bmon ;;
 	1) dunstify "ğŸŒ ç½‘ç»œæµé‡æ¨¡å—" "\- æŸ¥çœ‹å®æ—¶ç½‘ç»œæµé‡
- â¬: ä¸‹è¡Œæµé‡
- â«: ä¸Šè¡Œæµé‡" ;;
 	3) "$TERMINAL" -e "$EDITOR" "$0" ;;
 esac

update() {
    sum=0
    for arg; do
        read -r i < "$arg"
        sum=$(( sum + i ))
    done
    cache=${XDG_CACHE_HOME:-$HOME/.cache}/${1##*/}
    [ -f "$cache" ] && read -r old < "$cache" || old=0
    printf %d\\n "$sum" > "$cache"
    printf %d\\n $(( sum - old ))
}

RX=$(update /sys/class/net/[ew]*/statistics/rx_bytes)
TX=$(update /sys/class/net/[ew]*/statistics/tx_bytes)

printf "â¬%4sB â«%4sB\\n" $(numfmt --to=iec $RX $TX)
